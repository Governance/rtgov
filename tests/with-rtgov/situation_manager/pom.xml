<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
	<artifactId>tests-situation-manager</artifactId> 
	<packaging>jar</packaging>
	<name>Overlord RTGov::Tests::With RTGov::Situation Manager</name>

	<parent>
		<groupId>org.overlord.rtgov.tests</groupId>
		<artifactId>tests-with-rtgov</artifactId>
		<version>2.0.0-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.overlord.rtgov.activity-analysis</groupId>
			<artifactId>analytics</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.active-queries</groupId>
			<artifactId>active-collection</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.samples.jbossas.ordermgmt</groupId>
			<artifactId>samples-jbossas-ordermgmt-app</artifactId>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.samples.jbossas.ordermgmt</groupId>
			<artifactId>samples-jbossas-ordermgmt-ip</artifactId>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.overlord.rtgov</groupId>
			<artifactId>overlord-rtgov-all-eap6</artifactId>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-arquillian-container-managed</artifactId>
		</dependency>

		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-core-asl</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
		    <groupId>javax</groupId>
		    <artifactId>javaee-api</artifactId>
		    <scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.shrinkwrap.resolver</groupId>
			<artifactId>shrinkwrap-resolver-impl-maven</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.arquillian.junit</groupId>
			<artifactId>arquillian-junit-container</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemProperties>
						<property>
							<name>rtgov.version</name>
							<value>${project.version}</value>
						</property>
					</systemProperties>
					<includes>
						<include>**/*TestCase.java</include>
						<include>**/*Test.java</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>	
	
</project>
