<assembly>
	<!-- id typically identifies the "type" (src vs bin etc) of the assembly -->
	<id>bin</id>
	<includeBaseDirectory>true</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<fileSets>

		<!-- Copy modules and deployments -->
		<fileSet>
			<directory>src/main/jbossas/modules</directory>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</fileSet>

	</fileSets>
    
	<dependencySets>

		<dependencySet>
			<outputDirectory>org/overlord/bam/main</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.bam.common:bam-util:jar</include>
				<include>org.overlord.bam.common:bam-infinispan:jar</include>
				<include>org.overlord.bam.activity-management:activity:jar</include>
				<include>org.overlord.bam.event-processor-network:epn-core:jar</include>
				<include>org.overlord.bam.event-processor-network:epn-cep:jar</include>
				<include>org.overlord.bam.event-processor-network:epn-mvel:jar</include>
				<include>org.overlord.bam.event-processor-network:epn-infinispan:jar</include>
				<include>org.overlord.bam.active-queries:active-collection:jar</include>
				<include>org.overlord.bam.active-queries:active-collection-infinispan:jar</include>
				<include>org.overlord.bam.active-queries:acs-epn:jar</include>
				<include>org.overlord.bam.activity-analysis:analytics:jar</include>
			</includes>
		</dependencySet>
        
		<dependencySet>
			<outputDirectory>org/mvel/mvel2/main</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.mvel:mvel2:jar</include>
			</includes>
		</dependencySet>
        
	</dependencySets>

</assembly>
