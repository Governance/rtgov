<assembly>
	<!-- id typically identifies the "type" (src vs bin etc) of the assembly -->
	<id>bin</id>
	<includeBaseDirectory>true</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<fileSets>

		<!--Copy files like License and readmes etc -->	
		<fileSet>
			<directory>src/main/release</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
				<include>*.properties</include>
			</includes>
		</fileSet>

		<!-- Copy samples -->
		<fileSet>
			<directory>../../../samples/jbossas</directory>
			<outputDirectory>samples</outputDirectory>
			<excludes>
				<exclude>**/.*</exclude>
				<exclude>**/target/**</exclude>
				<exclude>**/.settings/**</exclude>
			</excludes>
		</fileSet>

		<!-- Copy modules and deployments -->
		<fileSet>
			<directory>src/main/jbossas</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>

	</fileSets>
    
	<dependencySets>

		<!-- server profile -->

		<dependencySet>
			<outputDirectory>profiles/server/deployments</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.rtgov.release.jbossas:overlord-rtgov:war</include>
				<include>org.overlord.rtgov.content:overlord-rtgov-epn:war</include>
				<include>org.overlord.rtgov.content:overlord-rtgov-acs:war</include>
				<include>org.overlord.rtgov.content.services:overlord-rtgov-services:war</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/server/jdbc/drivers</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>com.h2database:h2</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/server</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>org.overlord.gadgets.server:distribution:zip</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/server/overlord-commons</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>org.overlord:overlord-commons-installer:jar</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/server/overlord-commons</outputDirectory>
			<includes>
				<include>org.overlord:overlord-commons-idp:war</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/server/overlord-commons</outputDirectory>
			<includes>
				<include>org.overlord:overlord-commons-auth:jar</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/server/gadget-server</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.rtgov:gadgets:war</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>

		<!-- client profile -->

		<dependencySet>
			<outputDirectory>profiles/client/deployments</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.rtgov.release.jbossas:overlord-rtgov-client:war</include>
			</includes>
			<outputFileNameMapping>overlord-rtgov.war</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/client/overlord-commons</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>org.overlord:overlord-commons-installer:jar</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/client/overlord-commons</outputDirectory>
			<includes>
				<include>org.overlord:overlord-commons-idp:war</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>profiles/client/overlord-commons</outputDirectory>
			<includes>
				<include>org.overlord:overlord-commons-auth:jar</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>

		<!-- Modules -->

		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>org.overlord.rtgov.release.jbossas:module:zip</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}</outputFileNameMapping>
		</dependencySet>
        
	</dependencySets>

</assembly>
